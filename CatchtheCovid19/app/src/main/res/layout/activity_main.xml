<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="369dp"
        android:layout_height="365dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="37dp"
        app:layout_constraintBottom_toTopOf="@+id/scoreText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/covid1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="upScore"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/covid" />

        <ImageView
            android:id="@+id/covid2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="upScore"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/covid" />

        <ImageView
            android:id="@+id/covid3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="upScore"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/covid" />

        <ImageView
            android:id="@+id/covid4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="upScore"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/covid" />

        <ImageView
            android:id="@+id/covid5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="upScore"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/covid" />

        <ImageView
            android:id="@+id/covid6"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="upScore"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/covid" />

        <ImageView
            android:id="@+id/covid7"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="upScore"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/covid" />

        <ImageView
            android:id="@+id/covid8"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="upScore"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/covid" />

        <ImageView
            android:id="@+id/covid9"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="upScore"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/covid" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="41dp"
        android:text="Time: 10"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:text="Score : 0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="28dp"
        android:onClick="basla"
        android:text="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>